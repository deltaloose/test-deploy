<h2>User info</h2>
<% if @user.errors.any? %>
    <h3 class="text-danger"><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
      <% @user.errors.full_messages.each do |msg| %>
      <ul class="text-danger">
      <li><%= msg %></li></ul>
      <% end %>
    <% end %>
<%= form_for(@user) do |f| %>
  <div class="field">
    <label for="user_name">Name</label>
    <%= f.text_field :name, autofocus:true %>
  </div>

  <div class="field">
    <label for="user_image">Image</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
  </div>

  <div class="field">
    <label for="user_introduction">Introduction</label>
    <%= f.text_area :introduction %>
  </div>

  <div class="actions">
    <input type="submit" name="commit" value="Update User" data-disable-with="Update User">
  </div>
  <% end %>