<h2>User info</h2>
	<tbody>
		<table class="table">
			<tr>
				<%= attachment_image_tag user, :profile_image, size:"100x100", fallback:"no_image.jpg", size: '100x100' %>
			</tr>
		</table>
		<table class="table">
			<div class="row">
	    	<tr>
	    	  <th>name</th>
	    	  <th><%= user.name %></th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%= user.introduction %>
			<tr>
			    <th>follows</th>
			    <th><%= link_to user.follower.count, user_follows_path(user) %></th>
			</tr>
			<tr>
			    <th>followers</th>
			    <th><%= link_to user.followed.count, user_followers_path(user) %></th>
			</tr>
			</table>
			<% unless current_user == user %>
			  <% if current_user.following?(user) %>
			    <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete %>
			  <% else %>
			    <%= link_to 'フォローする', user_relationships_path(user.id), method: :post %>
			  <% end %>
			<% end %>
			</tr>
		</table>
		<div class="row">
			<%= link_to "",edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
		</div>
	</tbody>